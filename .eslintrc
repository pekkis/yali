{
  "extends": "airbnb",

  "rules": {
    "new-cap": [2, {
      "capIsNewExceptions": [
        "WidthProvider",
        "Seq",
        "OrderedMap",
        "List",
        "Map",
        "Seq",
        "Set",
        "Range",
        "Immutable.Map",
        "Immutable.Set",
        "Immutable.List"
      ]
    }],

    "react/jsx-no-bind": [2, {
      "ignoreRefs": false,
      "allowArrowFunctions": true,
      "allowBind": true
    }],

    "react/prefer-stateless-function": [1]

  },

  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  }

}
